@page
@model BookListRazor.Pages.Products.indexModel

<br />

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Product List</h2>
    </div>

    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white"> Create New Product</a>
    </div>

    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model.Prds.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Prds.FirstOrDefault().Id"></label>
                        </th>
                        <th>                            
                            <label asp-for="Prds.FirstOrDefault().Name"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Prds)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-Id="@item.Id" onclick="return confirm('你確定要刪除該筆資料嗎？')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>

                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Product available. </p>
            }
        </form>
    </div>


    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /> <br />
    </div>

    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th> Name</th>                    
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/products.js"></script>
}